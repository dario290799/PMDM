<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".juego"
    android:background="@drawable/cf">

    <ImageView
        android:id="@+id/carta"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/c1"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:alpha="0.2">

        <ImageButton
            android:id="@+id/arriba"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:scaleType="fitXY"
            android:src="@drawable/backgroudup"
            tools:ignore="SpeakableTextPresentCheck"></ImageButton>

        <ImageButton
            android:id="@+id/abajo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:scaleType="fitXY"
            android:src="@drawable/backgrounddown"
            tools:ignore="SpeakableTextPresentCheck"></ImageButton>
    </LinearLayout>

</FrameLayout>